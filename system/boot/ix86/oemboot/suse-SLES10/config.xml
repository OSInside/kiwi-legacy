<?xml version="1.0" encoding="utf-8"?>

<image schemaversion="5.8" name="initrd-oemboot-suse-SLES10">
	<description type="boot">
		<author>Marcus Schaefer</author>
		<contact>ms@novell.com</contact>
		<specification>boot/initrd image used on OEM VMX disk</specification>
	</description>
	<preferences>
		<type image="cpio" bootprofile="default" bootkernel="std"/>
		<version>2.1.1</version>
		<packagemanager>smart</packagemanager>
		<rpm-check-signatures>false</rpm-check-signatures>
	</preferences>
	<profiles>
		<profile name="default" description="Boot with default setup"/>
		<profile name="xen" description="Boot with xen mboot.c32 setup"/>
		<profile name="ec2" description="Boot using EC2 system"/>
		<profile name="std" description="KERNEL: Default"/>
		<profile name="xenk" description="KERNEL: Xen kernel/mboot.c32"/>
		<profile name="smp" description="KERNEL: pae kernel"/>
		<profile name="custom" description="KERNEL: specified by bootinclude in system XML"/>
		<profile name="pae" description="KERNEL: pae kernel"/>
		<profile name="ec2k" description="KERNEL: EC2 kernel"/>
		<profile name="desktop" description="KERNEL: Desktop kernel"/>
	</profiles>
	<drivers>
		<file name="drivers/acpi/*"/>
		<file name="drivers/ata/*"/>
		<file name="drivers/block/cciss.ko"/>
		<file name="drivers/block/loop.ko"/>
		<file name="drivers/cdrom/*"/>
		<file name="drivers/firmware/edd.ko"/>
		<file name="drivers/hwmon/*"/>
		<file name="drivers/ide/*"/>
		<file name="drivers/md/*"/>
		<file name="drivers/message/fusion/*"/>
		<file name="drivers/net/*"/>
		<file name="drivers/scsi/*"/>
		<file name="drivers/thermal/*"/>
		<file name="drivers/usb/*"/>
		<file name="drivers/block/virtio_blk.ko"/>
		<file name="drivers/virtio/*"/>
		<file name="fs/binfmt_aout.ko"/>
		<file name="fs/binfmt_misc.ko"/>
		<file name="fs/ext2/*"/>
		<file name="fs/ext3/*"/>
		<file name="fs/fat/*"/>
		<file name="fs/jbd/*"/>
		<file name="fs/mbcache.ko"/>
		<file name="fs/nls/nls_cp437.ko"/>
		<file name="fs/nls/nls_iso8859-1.ko"/>
		<file name="fs/nls/nls_utf8.ko"/>
		<file name="fs/quota_v1.ko"/>
		<file name="fs/quota_v2.ko"/>
		<file name="fs/reiserfs/*"/>
		<file name="fs/squashfs.ko"/>
		<file name="fs/udf/*"/>
		<file name="fs/vfat/*"/>
		<file name="net/packet/*"/>
	</drivers>
	<drivers profiles="xen">
		<file name="drivers/xen/*"/>
	</drivers>
	<repository type="rpm-md" status="replaceable">
		<source path="obs://SUSE:SLE-10-SP2:GA/standard"/>
	</repository>
	<packages type="bootstrap" profiles="std">
		<package name="kernel-default"/>
	</packages>
	<packages type="bootstrap" profiles="smp">
		<package name="kernel-smp"/>
	</packages>
	<packages type="bootstrap" profiles="xenk">
		<package name="kernel-xen" arch="x86_64"/>
		<package name="kernel-xenpae" arch="i686"/>
		<package name="kernel-xenpae" arch="i586"/>
		<package name="xen"/>
<!-- xen dom0 support only on x86_64 -->
		<package name="xen" arch="x86_64"/>
	</packages>
	<packages type="image" profiles="ec2k">
		<package name="kernel-ec2"/>
	</packages>
	<packages type="image" profiles="desktop">
		<package name="kernel-desktop" arch="x86_64"/>
		<package name="kernel-desktop" arch="i686"/>
		<package name="kernel-default" arch="i586"/>
	</packages>
	<packages type="image" profiles="custom"><!-- empty custom section to allow bootincluding custom kernel --></packages>
	<packages type="bootstrap">
		<package name="adaptec-firmware"/>
		<package name="atftp"/>
		<package name="bc"/>
		<package name="bind-libs"/>
		<package name="bind-utils"/>
		<package name="bootsplash"/>
		<package name="busybox"/>
		<package name="bzip2"/>
		<package name="curl"/>
		<package name="dhcpcd"/>
		<package name="dialog"/>
		<package name="diffutils"/>
		<package name="dosfstools"/>
		<package name="e2fsprogs"/>
		<package name="eject"/>
		<package name="fbiterm"/>
		<package name="file"/>
		<package name="filesystem"/>
		<package name="fribidi"/>
		<package name="gettext"/>
		<package name="gfxboot"/>
		<package name="glibc"/>
		<package name="glibc-locale"/>
		<package name="grub"/>
		<package name="hwinfo"/>
		<package name="iputils"/>
		<package name="kexec-tools"/>
		<package name="lvm2"/>
		<package name="make"/>
		<package name="module-init-tools"/>
		<package name="net-tools"/>
		<package name="netcfg"/>
		<package name="openssl"/>
		<package name="parted"/>
		<package name="procps"/>
		<package name="psmisc"/>
		<package name="reiserfs"/>
		<package name="syslinux"/>
		<package name="tar"/>
		<package name="util-linux"/>
	</packages>
	<packages type="delete">
		<package name="ash"/>
		<package name="cracklib-dict-full"/>
		<package name="cracklib-dict-small"/>
		<package name="diffutils"/>
		<package name="expat"/>
		<package name="fillup"/>
		<package name="gdbm"/>
		<package name="gfxboot"/>
		<package name="gnome-filesystem"/>
		<package name="info"/>
		<package name="insserv"/>
		<package name="iptables"/>
		<package name="libxml2"/>
		<package name="licenses"/>
		<package name="logrotate"/>
		<package name="make"/>
		<package name="man"/>
		<package name="mkisofs"/>
		<package name="openslp"/>
		<package name="pam"/>
		<package name="pam-modules"/>
		<package name="perl"/>
		<package name="perl-Bootloader"/>
		<package name="perl-gettext"/>
		<package name="permissions"/>
		<package name="suse-build-key"/>
		<package name="suse-release"/>
	</packages>
</image>
