<?xml version="1.0" encoding="utf-8"?>
<image schemaversion="3.8" name="suse-10.3-xen-guest">
	<description type="system">
		<author>Marcus Sch√§fer</author>
		<contact>ms@novell.com</contact>
		<specification>openSUSE 10.3 xen guest system</specification>
	</description>
	<preferences>
		<type filesystem="ext3" boot="xenboot/suse-10.3">xen</type>
		<version>1.1.2</version>
		<packagemanager>smart</packagemanager>
		<rpm-check-signatures>false</rpm-check-signatures>
		<rpm-force>true</rpm-force>
		<locale>en_US</locale>
		<keytable>us.map.gz</keytable>
	</preferences>
	<users group="root">
		<user pwd="$1$wYJUgpM5$RXMMeASDc035eX.NbYWFl0" home="/root" name="root"/>
	</users>
	<repository type="yast2">
		<!--<source path="/image/CDs/full-10.3-i386"/>-->
		<source path="opensuse://10.3/repo/oss/"/>
	</repository>
	<packages type="image">
		<package name="bootsplash-theme-SuSE" bootinclude="true" bootdelete="true"/>
		<package name="kernel-default"/>
		<package name="bootsplash"/>
		<package name="resmgr"/>
		<package name="vim"/>
		<opensusePattern name="base-10.3"/>
	</packages>
	<packages type="xen">
		<package name="kernel-xen"/>
		<package name="xen"/>
	</packages>
	<xenconfig memory="512">
		<xendisk device="/dev/sda"/> 
	</xenconfig>
	<packages type="bootstrap">
		<package name="filesystem"/> 
		<package name="glibc-locale"/>
	</packages>
</image>
