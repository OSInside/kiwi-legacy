        </partitions>
        <timeout>20</timeout>
        <union ro="/dev/sda2" rw="/dev/sda3" type="clicfs"/>
      </pxedeploy>
    </type>
    <version>0.0.1</version>
    <rpm-check-signatures>false</rpm-check-signatures>
    <rpm-force>true</rpm-force>
    <locale>en_US</locale>
    <keytable>us.map.gz</keytable>
